<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MVP.MVPActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/txt_email_mvp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:hint="Enter Email"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/txt_name_mvp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/txt_email_mvp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:hint="Enter name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_mvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name_mvp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="30sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>